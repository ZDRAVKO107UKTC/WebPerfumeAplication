@model IEnumerable<WebCosmeticApp.Models.Cosmetic>

@{
    ViewData["Title"] = "Списък с продукти";
}

<h2 class="text-center my-4">Козметични продукти</h2>

<div class="text-end mb-3">
    <a asp-action="Create" class="btn btn-success">+ Добави нов продукт</a>
</div>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm">
                <img src="@item.Picture" class="card-img-top" alt="@item.Name" style="height: 200px; object-fit: cover;" />
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Description</p>
                    <p><strong>Цена:</strong> @item.Price лв</p>
                    <p><strong>Налично:</strong> @item.Quantity бр.</p>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Детайли</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Редактирай</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Изтрий</a>
                </div>
            </div>
        </div>
    }
</div>
