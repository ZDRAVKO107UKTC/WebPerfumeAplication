@model WebCosmeticApp.Models.Cosmetic

@{
    ViewData["Title"] = "Детайли за продукт";
}

<h2 class="text-center my-4">Детайли за продукта</h2>

<div class="container">
    <div class="card mb-4 shadow-sm">
        <div class="row g-0">
            <div class="col-md-4 text-center p-3">
                @if (!string.IsNullOrEmpty(Model.Picture))
                {
                    <img src="@Model.Picture" class="img-fluid rounded" alt="@Model.Name" />
                }
                else
                {
                    <img src="https://via.placeholder.com/300x200?text=No+Image" class="img-fluid rounded" />
                }
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h4 class="card-title">@Model.Name</h4>
                    <p class="card-text"><strong>Марка:</strong> @Model.Brand</p>
                    <p class="card-text"><strong>Категория:</strong> @Model.Category</p>
                    <p class="card-text"><strong>Описание:</strong> @Model.Description</p>
                    <p class="card-text"><strong>Цена:</strong> @Model.Price лв</p>
                    <p class="card-text"><strong>Налично количество:</strong> @Model.Quantity бр.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-between">
        <a asp-action="Index" class="btn btn-outline-secondary">⬅ Назад</a>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">✏ Редактирай</a>
    </div>
</div>
